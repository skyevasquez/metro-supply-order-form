{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "package.json",
      "package-lock.json",
      "server.js",
      "scripts/**",
      "FIREBASE_MIGRATION_PLAN.md",
      "serviceAccountKey.json",
      "functions/**"
    ],
    "rewrites": [
      {
        "source": "/api/submit-order",
        "function": "submitOrder"
      },
      {
        "source": "/api/health",
        "function": "health"
      },
      {
        "source": "/api/test-email",
        "function": "testEmail"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" install",
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ],
    "runtime": "nodejs20"
  }
}
